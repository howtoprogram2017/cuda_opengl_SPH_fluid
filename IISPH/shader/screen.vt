#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aTexCoords;
uniform int State;
out vec2 TexCoords;
uniform mat4 MVP; 
void main()
{
    TexCoords = aTexCoords;
	if(State==0){
	gl_Position = vec4(aPos.x, aPos.y, aPos.z, 1.0); 
	}
	else if(State==1){
	gl_Position=MVP*vec4(aPos,1.0);
	}
    
	
}  